<%- include("../partials/header.ejs") %>

<div id="back-1">
    <div class="container my-5 mx-auto text-center" style="width:40%;">
        <div class="text-center"><h2 class="mb-3 mt-2 px-0">Payment Details</h2></div>
        <div class="p-5" style=" border: 3px solid rgb(20, 20, 20);">
                <form action="/payment/<%=id%>" method="POST">
                    <div class="form-group">
                      <label for="name1">Card Number</label>
                      <input type="text" class="form-control" id="name1" name="card_number" placeholder="Enter card number">
                    </div>
                    <div class="form-group">
                      <label for="image-1">CVV</label>
                      <input type="text" class="form-control" name="cvv" id="image-1" placeholder="cvv">
                    </div>
                    <div class="form-group">
                      <label for="price">Expiry Date</label>
                      <input type="Date" class="form-control" name="expiry_date" id="price" placeholder="expiry date">
                    </div>

                    <h4 class="my-4">Delivery Details</h4>

                    <div class="form-group">
                        <label for="name3">Pin</label>
                        <input type="number" class="form-control" id="name3" name="pin" placeholder="pin">
                    </div>
                    <div class="form-group">
                        <label for="name4">City</label>
                        <input type="text" class="form-control" id="name4" name="city" placeholder="city">
                    </div>
                    <div class="form-group">
                        <label for="name5">State</label>
                        <input type="text" class="form-control" id="name5" name="state" placeholder="state">
                    </div>
                    <button type="submit" class="btn btn-success">Pay and Place Order</button>
                </form>
        </div>
    </div>
</div>


<%- include("../partials/footer.ejs") %>
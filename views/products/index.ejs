<%- include("../partials/header.ejs") %>
<div class="container">
    <div class="jumbotron" style="height: 250px;">
        <div class="float-left">
            <h1>OLX</h1>
            <p class="lead">Buy or Sell any products you like for reasonable price</p>
            <a class="btn btn-info" href="/products/new">Add New Product</a>
        </div>
        <div class="float-right">
            <form class="form-inline mt-3 " action="/products/filter" method="POST">
                <div class="form-group">
                    <div>
                        <label class="mr-3" for="exampleFormControlSelect1">Category filter</label>
                    </div>
                    <select name="filter" class="form-control" id="exampleFormControlSelect1" onchange='this.form.submit()'>
                    <option value=-1 selected>Apply a filter</option>
                    <option value=0 >All</option>
                    <option value=1 >Vehicles</option>
                    <option value=2 >Electronic Appliances</option>
                    <option value=3 >Furnitures</option>
                    <option value=4 >Mobiles</option>
                    <option value=5 >Books, Sports and Hobbies</option>
                    <option value=6 >Other</option>
                    </select>
                </div>
            </form>
        </div>
        
        
        <!-- <form class="form-inline mt-3 " action="/products/" method="GET">
            <div class="form-group mr-sm-3">
                <label for="search" class="sr-only">Search</label>
                <input type="text" class="form-control" id="search" name="search" placeholder="Search products...">
            </div>
            <button type="submit" class="btn btn-success ">Search</button>
        </form> -->
    </div>
    <div class="row mt-5  ">
        <% products.forEach(function(elt){ %>
            <div class="col-lg-4 col-xl-3 col-sm-6 col-12" >
                <div class="card mb-2">
                    <img class="card-img-top img-width" src="<%= elt['image_url'] %>" alt="Card image cap">
                    <div class="card-body p-0 text-center pt-1">
                        <h5 class="card-title mb-0 mt-2 heading"><%= elt['product_name'] %></h5>
                        <a href="/products/<%=elt.id%>" class="btn btn-outline-danger my-2">Read More</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include("../partials/footer.ejs") %>
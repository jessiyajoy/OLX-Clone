<div id="back-1">
    <div class="container my-5 mx-auto text-center" style="width:60%;">
        <div class="text-center"><h2 class="mb-3 mt-2 px-0">Add New Product</h2></div>
        <div class="p-5" style=" border: 3px solid rgb(20, 20, 20);">
                <form action="/products" method="POST">
                    <div class="form-group">
                      <label for="name1">Product Name</label>
                      <input type="text" class="form-control" id="name1" name="product_name" placeholder="Enter product name">
                    </div>
                    <div class="form-group">
                      <label for="image-1">Image url</label>
                      <input type="text" class="form-control" name="image" id="image-1" placeholder="Image url">
                    </div>
                    <div class="form-group">
                      <label for="price">Price</label>
                      <input type="number" class="form-control" name="price" id="price" placeholder="Price">
                    </div>
                    <div class="form-group">
                        <label for="desc-1">Product Description</label>
                        <textarea type="text" class="form-control" name="description" rows="5" id="desc-1" placeholder="product description"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="name1">Year Purchased</label>
                        <input type="number" class="form-control" id="name1" name="year" placeholder="year">
                    </div>
                    <div class="form-group">
                        <label for="name1">Brand</label>
                        <input type="text" class="form-control" id="name1" name="brand" placeholder="brand name">
                    </div>

                    <div class="form-group">
                        <label for="name3">Pin</label>
                        <input type="number" class="form-control" id="name3" name="pin" placeholder="pin">
                    </div>
                    <div class="form-group">
                        <label for="name4">City</label>
                        <input type="text" class="form-control" id="name4" name="city" placeholder="city">
                    </div>
                    <div class="form-group">
                        <label for="name5">State</label>
                        <input type="text" class="form-control" id="name5" name="state" placeholder="state">
                    </div>
                    <div class="form-group">
                        <label for="image-1">Extra Image url</label>
                        <input type="text" class="form-control" name="image2" id="image-1" placeholder="Image url">
                      </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
        </div>
    </div>
</div>


